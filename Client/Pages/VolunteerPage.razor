@page "/volunteerpage"
@inject HttpClient Http
@inject IShiftService ShiftService
@using festival.Client.Services;
@using festival.Server.Interfaces;
@using festival.Shared.Models

<h3>Vælg en vagt</h3>

@if (shifts == null)
{
    <p>Henter tilgængelige vagter...</p>
}
else if (shifts.Count == 0)
{
    <p>Ingen tilgængelige vagter i øjeblikket.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Titel</th>
                <th>Område</th>
                <th>Starttid</th>
                <th>Sluttid</th>
                <th>Vigtighed</th>
                <!-- Flere kolonner efter behov -->
            </tr>
        </thead>
        <tbody>
            @foreach (var shift in shifts)
            {
                <tr>
                    <td>@shift.Title</td>
                    <td>@shift.Area.ToString()</td>
                    <td>@shift.StartTime</td>
                    <td>@shift.EndTime</td>
                    <td>@shift.Importance.ToString()</td>
                    <!-- Flere celler efter behov -->
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Shift> shifts;

    protected override async Task OnInitializedAsync()
    {
        shifts = await ShiftService.GetAllAsync();
    }
}